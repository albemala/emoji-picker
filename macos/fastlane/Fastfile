platform :mac do

  lane :generate_certificates_profiles do |options|
    username = options[:username] # Apple ID
    match(
      username: username,
      type: "development",
    )
    match(
      username: username,
      type: "appstore",
    )
    match(
      username: username,
      type: "developer_id",
      additional_cert_types: [
        "mac_installer_distribution",
        "developer_id_installer",
      ],
    )
  end

  lane :get_certificates_profiles do |options|
#     keychain_name = options[:keychain_name] || "login.keychain"
    username = options[:username] # Apple ID
    match(
#       keychain_name: keychain_name,
      username: username,
      type: "development",
      readonly: true,
    )
    match(
#       keychain_name: keychain_name,
      username: username,
      type: "appstore",
      readonly: true,
    )
    match(
#       keychain_name: keychain_name,
      username: username,
      type: "developer_id",
      additional_cert_types: [
        "mac_installer_distribution",
        "developer_id_installer",
      ],
      readonly: true,
    )
  end

  lane :build_app_store do
    build_mac_app(
      scheme: "Runner",
      export_method: "app-store",
      export_options: {
        teamID: "LN6G3T96BR",
        provisioningProfiles: {
          "me.albemala.ejimo" => "match AppStore me.albemala.ejimo macos",
        },
      },
      output_directory: "build",
    )
  end

  lane :build_standalone do
    build_mac_app(
      scheme: "Runner",
      export_method: "developer-id",
      export_options: {
        teamID: "LN6G3T96BR",
        provisioningProfiles: {
          "me.albemala.ejimo" => "match Direct me.albemala.ejimo macos",
        },
      },
      output_directory: "build",
    )
  end

  lane :publish_app_store do |options|
    upload_to_app_store(
      username: options[:username],
      app_identifier: "me.albemala.ejimo",
      skip_metadata: true,
      skip_screenshots: true,
    )
  end

  lane :publish_standalone do |options|
    ENV["FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD"] = options[:password]
    notarize(
      username: options[:username],
      asc_provider: "LN6G3T96BR",
      package: "build/Ejimo.app",
      print_log: true,
      verbose: true,
    )
  end

end
